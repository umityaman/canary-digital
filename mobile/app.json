{
  "expo": {
    "name": "CANARY Mobile",
    "slug": "canary-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#3b82f6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.canary.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "QR kod taramak için kamera erişimi gereklidir.",
        "NSPhotoLibraryUsageDescription": "Ekipman fotoğrafı eklemek için galeri erişimi gereklidir.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#3b82f6"
      },
      "package": "com.canary.mobile",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS",
        "android.permission.CAMERA"
      ]
    },
    "plugins": [
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "QR kod taramak için kamera erişimi gereklidir."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#3b82f6"
        }
      ]
    ]
  }
}
