DATABASE_URL="file:./prisma/dev.db"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
PORT=4000

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/google/callback"

# Email Configuration (Gmail örneği)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# Email Configuration için Gmail App Password oluşturma:
# 1. Google Account > Security > 2-Step Verification açık olmalı
# 2. Security > App passwords
# 3. "Mail" için yeni app password oluştur
# 4. Oluşan 16 haneli şifreyi EMAIL_PASSWORD olarak kullan

# Twilio WhatsApp Configuration
# https://console.twilio.com adresinden credentials alın
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"

# Twilio WhatsApp Setup:
# 1. https://console.twilio.com adresine gidin
# 2. Account > Account Info > ACCOUNT SID ve AUTH TOKEN'ı kopyalayın
# 3. Messaging > Try it out > Send a WhatsApp message
# 4. Sandbox numarasını not edin (varsayılan: +1 415 523 8886)
# 5. Telefonunuzdan sandbox'a join mesajı gönderin (örn: "join <code>")
# Production: Twilio WhatsApp Business API onayı gerekir

# Paraşüt API Configuration (Accounting & Invoicing)
# https://api.parasut.com adresinden API credentials alın
PARASUT_CLIENT_ID="your-parasut-client-id"
PARASUT_CLIENT_SECRET="your-parasut-client-secret"
PARASUT_USERNAME="your-parasut-email"
PARASUT_PASSWORD="your-parasut-password"
PARASUT_COMPANY_ID="your-company-id"
PARASUT_DEFAULT_ACCOUNT_ID="your-default-bank-account-id"

# Paraşüt Credentials Alma:
# 1. https://uygulama.parasut.com adresine gidin
# 2. Hesap Ayarları > Entegrasyonlar > API
# 3. Yeni API anahtarı oluştur
# 4. Client ID ve Secret Key'i kopyalayın
# 5. Company ID'yi URL'den alın (örnek: /123456/dashboard)

# iyzico Payment Gateway Configuration
# https://merchant.iyzipay.com adresinden API credentials alın
IYZICO_API_KEY="your-iyzico-api-key"
IYZICO_SECRET_KEY="your-iyzico-secret-key"
BACKEND_URL="http://localhost:4000"

# iyzico Credentials Alma:
# 1. https://merchant.iyzipay.com adresine gidin
# 2. Hesabım > Ayarlar > API Anahtarlarım
# 3. Test (Sandbox) veya Production API Key & Secret Key'i kopyalayın
# 4. BACKEND_URL callback için kullanılır (production'da domain adresiniz)
